{
  "name": "svitlo-power",
  "version": "1.0.0",
  "description": "Svitlo Power monitoring tool - Development Environment",
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd back-end && .venv\\Scripts\\python run.py",
    "dev:frontend": "cd front-end && npm run dev",
    "build:frontend": "cd front-end && npm run build",
    "init:all": "npm install && cd front-end && npm install && cd ../back-end && pip install -r requirements.txt",
    "kill:all": "taskkill /F /IM node.exe /IM python.exe 2>nul || true",
    "run:docker": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3"
  }
}
